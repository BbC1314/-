    </view>
    <view class="middle-content">
      <view class="middle-content__left">
        <text class="dis middle-title">差评</text>
      </view>
      <view custom-class="dis" class="evaluate">
        <van-tag mark>配送很快12</van-tag>
        <van-tag mark>根本就没见到东西就被12</van-tag>
        <van-tag mark>配送很快12</van-tag>
        <van-tag mark>配送很快12</van-tag>
      </view>
    </view>
  </view>
  <view class="footer">
    <van-cell title="优质评价" value="用户(0)" />
    <view class="footer-item van-hairline--top-bottom" wx:for="{{evaluateList}}" wx:key="index">
