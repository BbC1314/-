.header{
  display: flex;
  width: 100%;
  padding: 20px 20rpx;
  background-color: #0066ff;
  color: #ffffff;
  flex-flow: wrap
}

.header-left{
  width: 280rpx;
  text-align: center
}

.header-right{
  width: 209rpx;
  text-align: center
}

.header-right__num{
  font-size: 70rpx;
  margin-top: 15px
}

.header-footer{
  margin: 20px auto 0;
  padding: 5px 10px;
  border-radius: 18px;
  background-color: rgba(0, 0, 255, .5)
}

.header-left__num{
  font-size: 80rpx;
  margin-top: 15px
}

.middle-left__num{
  font-size: 50rpx;
}

.middle{
  width: 710rpx;
  padding: 20px 20rpx;
  background-color: #ffffff;
}

.middle-content , .middle-content__left{
  display: flex;
  align-items: flex-start
}

.middle-content{
  margin-top: 10px
  /* justify-content: space-between */
}

.middle-content .van-button{
  height: 40px;
  line-height: 38px
}

.dis{
  margin-right: 10px
}

.evaluate .van-tag--mark {
  border-radius: 8px
}

.evaluate .van-tag{
  margin-right: 10px;
  margin-top: 5px
}

.middle-title{
  width: 60rpx
}

.footer{
  margin-top: 10px;
  background-color: #ffffff;
}

.footer-item{
  width: 710rpx;
  padding: 10px 20rpx
}

.item-top{
  display: flex;
  margin-top: 10px
}

.item-top-left{
  width: 70%
}

.item-top-right{
  width: 30%;
  text-align: right
}

.item-bottom-left{
  width: 50%
}

.item-bottom-right{
  width: 50%;
  text-align: right
}
