/**app.wxss**/
@import './assets/styles/iconfont.wxss';
@import 'miniprogram_npm/vant-weapp/common/index.wxss';

page {
  -webkit-font-smoothing: antialiased;
  font-family: 'PingHei', 'Helvetica Neue', 'Helvetica', 'Arial', 'Verdana',
    'sans-serif';
  font-size: 28rpx;
  background: #f4f6f9;
  color: #333333;
  box-sizing: border-box;
}

.container {
  min-height: 100vh;
  overflow: hidden;
  box-sizing: border-box;
}

.page-wrapper {
  padding: 0 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.gz-cell-group {
  margin-top: 10px;
}

.gz-grade-tag {
  font-size: 28rpx;
  background: #fd6d33;
  padding: 4px 20rpx;
  border-radius: 20px;
}

.gz-grade-tag.van-hairline--surround::after {
  border-radius: 20px;
  border: 0 solid #ffffff;
  border-width: 1px;
}